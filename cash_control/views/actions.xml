    <record id="cash_control_box_action" model="ir.actions.act_window">
        <field name="name">Cajas</field>
        <field name="res_model">cash.control.box</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Acción para Movimientos -->
    <record id="cash_control_movement_action" model="ir.actions.act_window">
        <field name="name">Movimientos de cajas</field>
        <field name="res_model">cash.control.movement</field>
