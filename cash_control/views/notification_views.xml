<odoo>
    <!-- AcciÃ³n para Notificaciones -->
    <record id="cash_control_notification_action" model="ir.actions.act_window">
        <field name="name">Notificaciones</field>
        <field name="res_model">cash.control.notification</field>
        <field name="view_mode">tree,form</field>
        <!-- Solo managers pueden verla -->
        <field name="groups_id" eval="[(6,0,[ref('cash_control.group_cash_control_manager')])]"/>
    </record>
    <!-- Vista tree -->
    <record id="view_cash_control_notification_tree" model="ir.ui.view">
        <field name="name">cash.control.notification.tree</field>
        <field name="model">cash.control.notification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vista form -->
    <record id="view_cash_control_notification_form" model="ir.ui.view">
        <field name="name">cash.control.notification.form</field>
        <field name="model">cash.control.notification</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
