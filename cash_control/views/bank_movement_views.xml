<odoo>
  <record id="view_cash_control_bank_movement_form" model="ir.ui.view">
    <field name="name">cash.control.bank.movement.form</field>
    <field name="model">cash.control.bank.movement</field>
    <field name="arch" type="xml">
      <form string="Movimiento Bancario">
        <sheet>
          <div class="oe_title">
                <h1>
                    Balance: <field name="balance" readonly="1" string="Balance de banco"/>
                </h1>
            </div>
          <group>
            <!-- Columna Izquierda: Datos principales -->
            <group>
              <field name="name" readonly="1"/>
              <!--<field name="balance"/>-->
              <field name="bank_id"/>
              <field name="date"/>
              <field name="type"/>
              <field name="origen" invisible="type != 'ingreso'"/>
              <field name="amount"/>
              <field name="signed_amount" invisible="1"/>
              <field name="moneda"/>
            </group>
            <!-- Columna Derecha: InformaciÃ³n complementaria -->
            <group>
              <field name="responsible_id"/>
              <field name="notes"/>
              <!-- Campos computados para transferencias -->
              <field name="is_transferencia" invisible="1"/>
              <field name="is_transferencia_banco" invisible="1"/>
              <field name="target_cash_box_id" invisible="not is_transferencia" placeholder="Seleccione la Caja Destino"/>
              <field name="target_bank_id" invisible="not is_transferencia_banco" placeholder="Seleccione el Banco Destino"/>
            </group>
          </group>
        </sheet>
        <!-- Chatter: Seguimiento de mensajes y actividades -->
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <record id="view_cash_control_bank_movement_tree" model="ir.ui.view">
    <field name="name">cash.control.bank.movement.tree</field>
    <field name="model">cash.control.bank.movement</field>
    <field name="arch" type="xml">
      <tree string="Movimientos Bancarios">
        <field name="name"/>
        <field name="bank_id"/>
        <field name="date"/>
        <field name="responsible_id"/>
        <field name="type"/>
        <field name="signed_amount" sum="Total" string="Monto"/>
        <field name="target_cash_box_id" optional="hide"/>
        <field name="target_bank_id" optional="hide"/>
        <field name="origen" optional="hide"/>
        <field name="moneda" optional="hide"/>
      </tree>
    </field>
  </record>
</odoo>
