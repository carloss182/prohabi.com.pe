<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.whatsapp</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group>
                    <field name="whatsapp_message_ids" widget="one2many_list"/>
                    <button name="action_view_whatsapp_history" type="object" string="Ver Historial de WhatsApp" class="oe_highlight"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
